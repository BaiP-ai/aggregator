---
import AILogoChip from './AILogoChip.astro';
---

<header class="bg-white shadow-sm">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <a href={import.meta.env.BASE_URL || "/"} class="flex items-center group">
      <!-- Use the AILogoChip component instead of the static logo -->
      <div class="relative overflow-hidden mr-1">
        <AILogoChip size="70" className="transition-transform duration-300 group-hover:scale-110" />
        <div class="absolute inset-0 bg-primary/10 opacity-0 group-hover:opacity-100 rounded-full transform scale-0 group-hover:scale-100 transition-all duration-300"></div>
      </div>
      <div class="flex flex-col">
        <span class="text-base md:text-lg lg:text-2xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent transform transition-all duration-300 group-hover:translate-x-1">
          Boston AI Partners
        </span>
        <span class="text-xs md:text-sm text-gray-500 group-hover:text-primary transition-colors duration-300">
          Responsible AI Solutions
        </span>
      </div>
    </a>
    
    <nav class="hidden md:flex items-center space-x-8">
      <a href={`${import.meta.env.BASE_URL}/about`} class="relative font-medium transition-colors text-gray-700 hover:text-primary py-1 px-1 overflow-hidden group">
        About
        <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary transform transition-transform duration-300 scale-x-0 group-hover:scale-x-100"></span>
      </a>
      <a href={`${import.meta.env.BASE_URL}/services`} class="relative font-medium transition-colors text-gray-700 hover:text-primary py-1 px-1 overflow-hidden group">
        Services
        <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary transform transition-transform duration-300 scale-x-0 group-hover:scale-x-100"></span>
      </a>
      <a href={`${import.meta.env.BASE_URL}/approach`} class="relative font-medium transition-colors text-gray-700 hover:text-primary py-1 px-1 overflow-hidden group">
        Approach
        <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary transform transition-transform duration-300 scale-x-0 group-hover:scale-x-100"></span>
      </a>
      <a href={`${import.meta.env.BASE_URL}/contact`} class="bg-gradient-to-r from-primary to-secondary px-6 py-3 rounded-full font-medium text-white shadow-lg transition-all duration-300 relative overflow-hidden group">
        <span class="relative z-10">Contact Us</span>
        <span class="absolute top-0 left-0 w-full h-full bg-white opacity-0 group-hover:opacity-25 transform translate-y-full group-hover:translate-y-0 transition-all duration-300"></span>
      </a>
    </nav>
    
    <button id="mobile-menu-button" class="md:hidden p-2 transition-colors text-gray-700 rounded-full hover:bg-gray-100 active:bg-gray-200">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="md:hidden hidden absolute top-full left-0 right-0 transition-all duration-300 ease-in-out overflow-hidden bg-white shadow-lg border-t border-gray-200/50 max-h-0 opacity-0">
    <nav class="flex flex-col px-4 py-2 space-y-2">
      <a href={`${import.meta.env.BASE_URL}/about`} class="block py-2 font-medium transition-colors hover:text-primary text-gray-700">
        About
      </a>
      <a href={`${import.meta.env.BASE_URL}/services`} class="block py-2 font-medium transition-colors hover:text-primary text-gray-700">
        Services
      </a>
      <a href={`${import.meta.env.BASE_URL}/approach`} class="block py-2 font-medium transition-colors hover:text-primary text-gray-700">
        Approach
      </a>
      <a href={`${import.meta.env.BASE_URL}/contact`} class="block py-2 bg-gradient-to-r from-primary to-secondary px-4 rounded-full font-medium text-white text-center my-2">
        Contact Us
      </a>
    </nav>
  </div>
</header>

<script>
  // Toggle mobile menu
  document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    if (mobileMenu) {
      if (mobileMenu.classList.contains('hidden')) {
        // Open menu
        mobileMenu.classList.remove('hidden');
        setTimeout(() => {
          mobileMenu.classList.add('max-h-64', 'opacity-100');
          mobileMenu.classList.remove('max-h-0', 'opacity-0');
        }, 10);
      } else {
        // Close menu
        mobileMenu.classList.add('max-h-0', 'opacity-0');
        mobileMenu.classList.remove('max-h-64', 'opacity-100');
        setTimeout(() => {
          mobileMenu.classList.add('hidden');
        }, 300);
      }
    }
  });
</script>
